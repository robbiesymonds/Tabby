{
  "compilerOptions": {
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "moduleResolution": "Node",
    "target": "ESNext",
    "baseUrl": "./src",
    "rootDir": "src",
    "outDir": "./build",
    "useDefineForClassFields": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "resolveJsonModule": true,
    "isolatedModules": false,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "allowJs": true,
    "noEmit": false,
    "strict": true
  },
  "include": ["src/background.ts"],
  "types": ["chrome"]
}
